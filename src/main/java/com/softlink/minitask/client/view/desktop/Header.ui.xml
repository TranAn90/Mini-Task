<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header-Obj1 {
		overflow: hidden;
		padding: 5px;
		position: relative;
	}
	
	.header-Obj2 {
		position: relative;
		float: left;
		padding: 0px 6px 0px 4px;
		opacity: 0.8;
		cursor: default;
	}
	
	.header-Obj3 {
		position: relative;
		top: 4px;
		color: #fff;
		font-weight: bold;
		font-size: 14px;
		padding-left: 8px;
	}
	
	.header-Obj4 {
		position: relative;
		top: 2px;
	}
	
	.header-Obj5 {
		position: relative;
		float: right;
		margin-right: 4px;
	}
	
	.header-Obj6 {
		position: relative;
		float: right;
		margin-right: 8px;
	}
	
	.header-Obj7 {
		position: relative;
		top: 2px;
		padding-left: 4px;
		padding-right: 4px;
		cursor: pointer;
	}
	
	.header-Obj8 {
		position: relative;
		top: 4px;
		font-size: 14px;
		color: #fff;
		font-weight: bold;
		padding-left: 6px;
		padding-right: 6px;
		cursor: pointer;
	}
	
	.header-Obj9 {
		position: relative;
		float: left;
		padding: 0px 6px 0px 4px;
		margin-left: 8px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.header-Obj1} background-softBlue">
		<g:HorizontalPanel styleName="{style.header-Obj2}"
			height="30px">
			<g:Image url="resources/evolution_tasks.png" height="24px"
				styleName="{style.header-Obj4}" />
			<g:Label styleName="{style.header-Obj3}"
				height="30px" ui:field="lbNameApp" />
		</g:HorizontalPanel>
		<g:HorizontalPanel height="30px" styleName="{style.header-Obj9} button-blueMenu" ui:field="horOrganizationName">
			<g:Label height="100%" styleName="{style.header-Obj8}" text="ITPRO" ui:field="lbOrganizationName"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel height="30px"
			styleName="{style.header-Obj5} button-blueMenu">
			<g:Label text="Tráº§n An" styleName="{style.header-Obj8}"
				height="100%" ui:field="lbUserName" />
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="{style.header-Obj6} button-blueMenu"
			height="30px">
			<g:Image url="resources/bell.png" height="24px"
				styleName="{style.header-Obj7}" ui:field="imgNotify" />
		</g:HorizontalPanel>
		<g:HorizontalPanel height="30px" styleName="{style.header-Obj6} button-blueMenu">
			<g:Label height="100%" styleName="{style.header-Obj8}" text="VN" ui:field="lbLanguage"/>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 