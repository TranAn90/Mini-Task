<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	@external .gwt-DialogBox .dialogMiddleCenter;
	.gwt-DialogBox .dialogMiddleCenter {
		padding: 0px !important;
	}
	
	.zoomOutDes_Obj2 {
		line-height: 27px !important;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT"
			spacing="0">
			<g:RichTextArea width="550px" height="300px"
				styleName="normal_textbox" ui:field="description" />
			<g:AbsolutePanel width="100%" height="50px"
				styleName="background-softGray">
				<g:at left="5" top="10">
					<g:Label styleName="{style.zoomOutDes_Obj2} button-greenStyle"
						width="80px" height="30px" text="Lưu mô tả" horizontalAlignment="ALIGN_CENTER" ui:field="btSave"></g:Label>
				</g:at>
				<g:at left="100" top="10">
					<g:Label styleName="{style.zoomOutDes_Obj2} button-whiteStyle"
						width="70px" height="30px" text="Làm lại" horizontalAlignment="ALIGN_CENTER" ui:field="btRemake"></g:Label>
				</g:at>
				<g:at left="190" top="20">
					<g:Label text="Hoặc"  />
				</g:at>
				<g:at left="225" top="20">
					<g:Anchor horizontalAlignment="ALIGN_CENTER" styleName="button-link"
						text="Hủy bỏ" width="50px" ui:field="btCancel" />
				</g:at>
			</g:AbsolutePanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 