<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.ProjectList-Obj1 {
		float: left;
		position: relative;
		left: 15px;
		top: 13%;
		height: 70%;
	}
	
	.ProjectList-Obj2 {
		float: right;
		position: relative;
		right: 20px;
		top: 13%;
		height: 70%;
	}
	
	.ProjectList-Obj3 {
		line-height: 30px;
		text-align: center;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:HTMLPanel height="46px" styleName="background-softGray">
			<g:HorizontalPanel styleName="{style.ProjectList-Obj1}">
				<g:Label text="Thêm dự án" width="100px" height="100%"
					styleName="{style.ProjectList-Obj3} button-greenStyle" ui:field="btnAddTask" />
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.ProjectList-Obj2}" />
		</g:HTMLPanel>
		<p1:DataGrid ui:field="gridProjects" />
	</g:HTMLPanel>

</ui:UiBinder> 