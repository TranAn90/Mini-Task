<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header-style {
		background: #0e74af;
		overflow: hidden;
		padding: 5px;
		position: relative;
		z-index: 10;
	}
	
	.header-floatleft {
		position: relative;
		float: left;
		padding: 0px 6px 0px 4px;
		opacity: 0.8;
	}
	
	.header-floatleft-font {
		position: relative;
		top: 4px;
		color: #fff;
		font-weight: bold;
		font-size: 14px;
		padding-left: 8px;
	}
	
	.header-floatleft-imgae {
		position: relative;
		top: 2px;
	}
	
	.header-floattopright {
		position: relative;
		float: right;
		border-radius: 3px;
		background: rgba(255, 255, 255, .3);
		background: -webkit-linear-gradient(top, rgba(255, 255, 255, .3) 0,
			rgba(255, 255, 255, .2) 100%);
		background: linear-gradient(to bottom, rgba(255, 255, 255, .3) 0,
			rgba(255, 255, 255, .2) 100%);
	}
	
	.header-floatright {
		position: relative;
		float: right;
		margin-right: 6px;
		border-radius: 3px;
		background: rgba(255, 255, 255, .3);
		background: -webkit-linear-gradient(top, rgba(255, 255, 255, .3) 0,
			rgba(255, 255, 255, .2) 100%);
		background: linear-gradient(to bottom, rgba(255, 255, 255, .3) 0,
			rgba(255, 255, 255, .2) 100%);
	}
	
	.header-floatright-image {
		position: relative;
		top: 2px;
		padding-left: 4px;
		padding-right: 4px;
		cursor: pointer;
	}
	
	.header-floatright-font {
		position: relative;
		top: 3px;
		font-size: 14px;
		color: #fff;
		font-weight: bold;
		padding-left: 6px;
		padding-right: 6px;
		cursor: pointer;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.header-style}">
		<g:HorizontalPanel styleName="{style.header-floatleft}"
			height="30px">
			<g:Image url="resources/evolution_tasks.png" height="24px"
				styleName="{style.header-floatleft-imgae}" />
			<g:Label text="Mini Task" styleName="{style.header-floatleft-font}"
				height="30px" />
		</g:HorizontalPanel>
		<g:HorizontalPanel height="30px"
			styleName="{style.header-floattopright}">
			<g:Label text="Tráº§n An" styleName="{style.header-floatright-font}" height="100%" />
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="{style.header-floatright}"
			height="30px">
			<g:Image url="resources/bell.png" height="24px"
				styleName="{style.header-floatright-image}" />
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 